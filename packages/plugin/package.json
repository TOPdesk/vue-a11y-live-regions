{
	"name": "@topdesk/vue-plugin-a11y-live-regions",
	"type": "module",
	"version": "1.0.1",
	"description": "Convenience to make status announcements with ARIA live regions more developer-friendly",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		"./testing": {
			"types": "./dist/testing.d.ts",
			"default": "./dist/testing.js"
		},
		"./jsdom": {
			"types": "./dist/jsdom.d.ts",
			"default": "./dist/jsdom.js"
		},
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsc --project tsconfig.build.json",
		"prepack": "cp ../../README.md ./README.md && npm run build",
		"postpack": "rm ./README.md",
		"test": "npm run lint && npm run typecheck && npm run test:specs",
		"typecheck": "tsc",
		"test:specs": "vitest --coverage.enabled",
		"lint": "eslint --max-warnings 0"
	},
	"files": [
		"./dist/"
	],
	"keywords": [
		"a11y",
		"aria-live",
		"status",
		"vue",
		"plugin",
		"accessibility",
		"screen",
		"reader",
		"screen-reader",
		"announcement"
	],
	"author": "Soma Holler",
	"license": "MIT",
	"peerDependencies": {
		"vue": "^3.5.26"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@stylistic/eslint-plugin": "^5.6.1",
		"@vitest/browser-playwright": "^4.0.7",
		"@vitest/coverage-v8": "^4.0.7",
		"@vue/test-utils": "^2.4.6",
		"eslint": "^9.39.2",
		"globals": "^16.5.0",
		"playwright": "^1.57.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.50.0",
		"vitest": "^4.0.7"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/TOPdesk/vue-a11y-live-regions.git"
	}
}
